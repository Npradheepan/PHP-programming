<?php
    
    $con = new mysqli('localhost', 'root', 'root', 'visitors', '8889');
    
    if ($con->connect_error) {
        die("Connection failed: " . $conn->connect_error);
    } 
    
?>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
